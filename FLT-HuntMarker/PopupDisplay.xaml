<Window x:Class="FLT_HuntMarker.PopupDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FLT_HuntMarker"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None" Opacity="0.7" AllowsTransparency="True"
        Title="Counter" Height="120" Width="80" ShowInTaskbar="False" Topmost="True">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown" Background="Transparent" MouseRightButtonUp="Grid_MouseRightButtonUp">
        <ListView x:Name="listviewPopup" Background="Transparent" IsEnabled="False">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Foreground" Value="Blue"></Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>
